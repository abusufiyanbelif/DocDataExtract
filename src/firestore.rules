/**
 * Core Philosophy: This ruleset uses a mixed-privacy model. User-specific data is private and
 * protected under the `/users/{userId}` path. Public-facing data, such as campaigns and settings,
 * is globally readable to support public pages, while write access is restricted to authenticated users.
 *
 * Data Structure:
 * - `/users/{userId}`: Private user data, accessible only by the owner or an admin.
 * - `/campaigns`, `/donations`, `/settings`: Publicly readable data for the website.
 * - `/leads`, `/user_lookups`: Internal data accessible only by authenticated users, with stricter writes.
 *
 * Key Security Decisions:
 * - Public Reads: `campaigns`, `donations`, and `settings` are readable by anyone to populate public-facing pages.
 * - Authenticated Writes: All write operations (create, update, delete) on public collections still require user authentication.
 *   Client-side logic is responsible for role-based authorization (e.g., only admins can edit settings).
 * - Admin Override: Admins have read/write access to user data for management purposes.
 * - No User Enumeration: Listing documents in `/users` is restricted to admins.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------

    /**
     * Checks if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }
    
    /**
     * Checks if the currently authenticated user has the 'Admin' role in their user document.
     * WARNING: This incurs a document read on every check. Use judiciously.
     */
    function isUserAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    /**
     * Checks if the currently authenticated user's UID matches the provided userId.
     * This is the primary function for verifying data ownership.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * For update and delete operations, confirms the document exists AND the user is the owner.
     * This prevents users from attempting to modify documents that don't exist.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * On create, validates that the user is creating their own profile document
     * and that the document's internal 'id' field matches the path UID for integrity.
     */
    function isCreatingOwnValidProfile(userId) {
      return isOwner(userId) && request.resource.data.id == userId;
    }

    /**
     * On update, ensures the document's internal 'id' field cannot be changed.
     */
    function isProfileIdImmutable() {
      return request.resource.data.id == resource.data.id;
    }
    
    /**
     * On create, validates the user is creating a document under their own path and
     * that the denormalized `userId` field is correctly set to their own UID.
     */
    function isCreatingOwnValidDocument(userId) {
      return isOwner(userId) && request.resource.data.userId == userId;
    }

    /**
     * On update, ensures the denormalized `userId` ownership field is immutable.
     */
    function isDocumentOwnerImmutable() {
      return request.resource.data.userId == resource.data.userId;
    }

    /**
     * On create, validates that a detail record's internal `documentId` correctly
     * references the parent document ID from the path.
     */
    function isCreatingValidDetail(documentId) {
      return request.resource.data.documentId == documentId;
    }

    /**
     * On update, ensures the parent document link (`documentId`) is immutable.
     */
    function isDetailParentLinkImmutable() {
      return request.resource.data.documentId == resource.data.documentId;
    }

    // ----------------------------------------------------------------------
    // Publicly Readable Collections
    // ----------------------------------------------------------------------

    /**
     * @description Manages campaigns, which are publicly viewable.
     * @path /campaigns/{campaignId}
     * @allow (read) Anyone can read campaign data for public pages.
     * @allow (write) Only authenticated users can modify campaigns.
     */
    match /campaigns/{campaignId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    /**
     * @description Manages beneficiaries within a campaign.
     * @path /campaigns/{campaignId}/beneficiaries/{beneficiaryId}
     * @allow (read) Anyone can read beneficiary lists for public campaign summaries.
     * @allow (write) Only authenticated users can modify beneficiaries.
     */
    match /campaigns/{campaignId}/beneficiaries/{beneficiaryId} {
        allow read: if true;
        allow write: if isSignedIn();
    }

    /**
     * @description Manages donations, which are publicly readable for summary charts.
     * @path /donations/{donationId}
     * @allow (read) Anyone can read donation data for aggregation on public pages.
     * @allow (write) Only authenticated users can manage donations.
     */
    match /donations/{donationId} {
      allow read: if true;
      allow write: if isSignedIn();
    }

    /**
     * @description Manages public app settings like branding.
     * @path /settings/{docId}
     * @allow (read) Anyone can read settings.
     * @allow (write) Only authenticated users can modify settings (UI restricts to admins).
     */
    match /settings/{docId} {
        allow read: if true;
        allow write: if isSignedIn();
    }

    // ----------------------------------------------------------------------
    // Internal & Private Collections
    // ----------------------------------------------------------------------
    
    /**
     * @description Manages leads, which are internal to the organization.
     * @path /leads/{leadId}
     * @allow (read, write) Only authenticated users can access leads.
     */
    match /leads/{leadId}/{allSubcollections=**} {
        allow read, write: if isSignedIn();
    }
    
    /**
     * @description Lookup table for finding a user's email by loginId or phone.
     * @path /user_lookups/{lookupId}
     * @allow (get) Anyone can perform a direct lookup during login.
     * @deny (list) Listing all lookups is denied to prevent user enumeration.
     * @allow (write, delete) Only admins can write (for profile creation/updates).
     */
    match /user_lookups/{lookupId} {
        allow get: if true;
        allow list: if false;
        allow write, delete: if isUserAdmin();
    }

    // ----------------------------------------------------------------------
    // User-Private Collections
    // ----------------------------------------------------------------------
    
    /**
     * @description Manages user profile documents.
     * @path /users/{userId}
     * @allow (get) Owner or an admin can read a user profile.
     * @allow (list) Only admins can list all users.
     * @allow (create) An admin or a new user creating their own profile.
     * @allow (update) An owner or an admin can update a profile.
     * @principle Secures user data while allowing for admin oversight.
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isUserAdmin();
      allow list: if isUserAdmin();
      allow create: if isCreatingOwnValidProfile(userId) || isUserAdmin();
      allow update: if (isExistingOwner(userId) && isProfileIdImmutable()) || isUserAdmin();
      allow delete: if false; // Deleting users should be a privileged server-side operation.
    }

    /**
     * @description Manages user-uploaded documents, which are stored in a subcollection.
     * @path /users/{userId}/documents/{documentId}
     * @allow (create) An authenticated user creating a document for themselves.
     * @deny (get) A user trying to read a document belonging to another user.
     * @principle Enforces document ownership for all operations using the path's {userId}.
     */
    match /users/{userId}/documents/{documentId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isCreatingOwnValidDocument(userId);
      allow update: if isExistingOwner(userId) && isDocumentOwnerImmutable();
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secures extracted details from an identity proof document.
     * @path /users/{userId}/documents/{documentId}/identityProofDetails/{identityProofDetailsId}
     * @allow (update) The document owner updating details of their own identity proof.
     * @deny (list) A user trying to list identity details from another user's document.
     * @principle Inherits ownership from the path, ensuring only the owner can access sensitive details.
     */
    match /users/{userId}/documents/{documentId}/identityProofDetails/{identityProofDetailsId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && isCreatingValidDetail(documentId);
      allow update: if isExistingOwner(userId) && isDetailParentLinkImmutable();
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secures extracted details from a billing document.
     * @path /users/{userId}/documents/{documentId}/billingDetails/{billingDetailsId}
     * @allow (get) The document owner reading their own billing information.
     * @deny (create) A user trying to create billing details under another user's document.
     * @principle Inherits ownership from the path, ensuring only the owner can access sensitive details.
     */
    match /users/{userId}/documents/{documentId}/billingDetails/{billingDetailsId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && isCreatingValidDetail(documentId);
      allow update: if isExistingOwner(userId) && isDetailParentLinkImmutable();
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Secures extracted details from a medical report.
     * @path /users/{userId}/documents/{documentId}/medicalReportDetails/{medicalReportDetailsId}
     * @allow (delete) The document owner deleting their own medical report data.
     * @deny (get) A user trying to access another user's private medical information.
     * @principle Inherits ownership from the path, ensuring only the owner can access sensitive details.
     */
    match /users/{userId}/documents/{documentId}/medicalReportDetails/{medicalReportDetailsId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && isCreatingValidDetail(documentId);
      allow update: if isExistingOwner(userId) && isDetailParentLinkImmutable();
      allow delete: if isExistingOwner(userId);
    }
  }
}
