rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    // NOTE: This function assumes the document ID is the user's auth UID.
    // This is not currently the case, so isOwner() checks will fail.
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      // Allow creation during initial seed or by any authenticated user.
      allow create: if request.auth == null || isSignedIn();
      // Allow all reads.
      allow read: if true;
      // TEMPORARY: Allow any signed-in user to write to any user profile.
      // This should be locked down to isOwner(userId) || isAdmin() later.
      allow write: if isSignedIn();
    }

    match /campaigns/{campaignId} {
      // TEMPORARY: Allow any signed-in user to manage campaigns.
      // This should be locked down to isAdmin() later.
      allow read, write: if isSignedIn();

      match /beneficiaries/{beneficiaryId} {
        allow read, write: if isSignedIn();
      }

      match /donations/{donationId} {
        allow read, write: if isSignedIn();
      }
    }
  }
}
